{
  "include": ["src"],
  "exclude": ["node_modules", "node_modules/**/*", "./src/stories"],
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@icons/*": ["./src/icons/*"]
    },
    "target": "es6",
    "module": "CommonJS",
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM"],
    "outDir": "./dist/",
    "sourceMap": false,
    "strict": true,
    "declaration": true
  }
}
